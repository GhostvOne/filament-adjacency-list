{
    "plugins": ["@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4,
                "wrapAttributes": "force-expand-multiline"
            }
        }
    ],
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
}
